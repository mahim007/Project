<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <form-bean name="adbk" type="comm.example.AddBookBean"/>
        <form-bean name="m" type="comm.example.RegisterBean"/>
        <form-bean name="a" type="comm.example.AdminBean"/>
        
    
    </form-beans>
    
   

    <action-mappings>
        
        <action path="/logout" type="comm.example.AdLogoutAction">
            <forward name="logout" path="/welcome.jsp"/>
        </action>
        
        
        <action input="/admin.jsp" name="a" path="/adcontroller" scope="request" type="comm.example.AdminAction">
            <forward name="adsuccess" path="/adsuccess.jsp"/>
        </action>
        
        <action input="/register.jsp" name="m" path="/rgtaction" scope="request" type="comm.example.RegisterAction">
            <forward name="rmsuccess" path="/rmsuccess.jsp"/>
        </action>
        
        <action path="/memberlogin" type="comm.example.LoginMemberAction">
            
        </action>
        
        <action path="/issuebook" type="comm.example.IssueBookAction">
        </action>
        
        <action input="/addbook.jsp" name="adbk" path="/addbkk" scope="request" type="comm.example.AddBookAction">
        
        </action>
        
        
        <action path="/bookdetails" type="comm.example.BookDetailsAction"/>
        
        <action path="/booksearchaction" type="comm.example.BookSearchAction"/>
        
        <action path="/issuebooklist" type="comm.example.IssueBookListAction"/>
        
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
